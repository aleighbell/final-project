   <script async defer
     src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.secrets.google_maps_api_key %>&callback=initMap">
     <%= puts "My key --->#{Rails.application.secrets.google_maps_api_key}<---" %>
     </script>
