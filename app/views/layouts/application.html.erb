      async defer></script>

  </head>
  <body>

    <header>

          <div class="logo">
          <div>
          <nav>
            <ul>
              <li class = 'nav'><%= link_to "Home", "/" %></li>
              <div class="dropdown">
                <button class="dropbtn">Business</button>
                <div class="dropdown-content">
                  <a href="#" class="ls">Liquor Store</a>
                  <a href="#" class="bs">Book Store</a>
