                  <a href="#" class="so">Service Ontario</a>
                  <a href="#" class="sc">Service Canada</a>
                  <a href="#" class="ps">Pet Shop</a>
                  <a href="#" class="cafe">Cafe</a>
                </div>
              </div>

                   <li class='nav'><%= link_to "About Us", about_us_path %> </li>
                   <li class='nav'><%= link_to "Contact Us", contact_us_path, id: "contact-link"  %> </li>
                   <li class='nav'><%= link_to "Offleash Toronto", offleash_toronto_path %></li>

                  <% if current_user %>
                  <li class='nav'><span>Logged in as: <%= current_user.name %></span></li>
                  <li class='nav'><%= link_to 'Log Out', log_out_path, method: :delet %></li>
                  <% else %>
                  <li class='nav'>  <%= link_to "Sign up", sign_up_path %> </li>
                  <li class='nav'>  <%= link_to "Log in", log_in_path %></li>
                  <% end %>

                </ul>
              </nav>

